{
  "name": "mcd-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:https": "node scripts/dev-https.js",
    "dev:clean": "pkill -f 'next dev' || true && netlify dev",
    "netlify:dev": "netlify dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "test:connection": "node -e \"require('./src/utils/testConnection').runFullConnectionTest()\"",
    "verify:deployment": "node scripts/verify-deployment.js",
    "deploy": "npm run build && echo 'Ready for Netlify deployment'",
    "netlify:build": "npm run build",
    "netlify:deploy": "netlify deploy --prod"
  },
  "dependencies": {
    "@netlify/functions": "^4.1.14",
    "@netlify/plugin-nextjs": "^5.11.6",
    "@next/bundle-analyzer": "^15.3.5",
    "axios": "^1.10.0",
    "leaflet": "^1.9.4",
    "next": "15.1.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@next/eslint-plugin-next": "^15.3.5",
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9.30.1",
    "eslint-config-next": "^15.3.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "local-ssl-proxy": "^2.0.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
